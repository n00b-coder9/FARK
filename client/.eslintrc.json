{
    "env": {
        "browser": true,
        "es6": true
    },
    "root": true,
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": "off",
        "space-infix-ops": "error",
        "max-len": [
            2,
            100,
            {
                "ignoreRegExpLiterals": true
            }
        ],
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "no-console": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ]
    }
}